[core]
  editor = vim
  excludesfile = ~/.gitignore
  whitespace = blank-at-eol,cr-at-eol,tabwidth=4,tab-in-indent,space-before-tab

[user]
  name = "Maciek Lenc"
  email = "maciej.lenc@sage.com"

[alias]
[alias]
  a = add
  aa = !git add . && git status
  ap = add -p
  b = branch
  c = commit -v
  co = checkout
  cob = checkout -b
  cr = diff -p --no-prefix -U1000
  d = diff
  dc = diff --cached
  df = diff --function-context
  f = fetch
  in = !git fetch && git log ..origin/master
  ls = ls-files
  pl = pull
  pp = !git pull && git push
  ps = push
  s = status
  ss = status -s
  who = shortlog -n -s --no-merges

[pull]
	default = current

[push]
  default = current

[difftool]
	prompt = false

[merge]
  conflictstyle = diff3

[mergetool]
	prompt = false

[core]
	excludesfile = /Users/maciej.lenc/.gitignore
